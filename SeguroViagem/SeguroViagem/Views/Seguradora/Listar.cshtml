@model IEnumerable<SeguroViagem.Models.Seguradora>

@{
    ViewBag.Title = "Listar";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}


<br />
<br />
<div class="card container" id="seguradoras" style="width:90rem">
    <div class="card-body">
        <h2 style="text-align:center">Lista de Seguradoras Cadastradas</h2>
        <br />
        <p style="text-align:right">
            <a href="/Seguradora/Inserir/" title="" class="btn btn-primary col-md-1.5">
                <i class="fas fa-plus"></i> Seguradora
            </a>
        </p>
        <table border="1" style="text-align:center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.NomeSeg)
                <th>@Html.DisplayNameFor(model => model.Comissao)
                <th>@Html.DisplayNameFor(model => model.ExtBagagem)
                <th>@Html.DisplayNameFor(model => model.MorteAcid)
                <th>@Html.DisplayNameFor(model => model.TransCorpo)
                <th>@Html.DisplayNameFor(model => model.InvalidezPerm)
                <th>@Html.DisplayNameFor(model => model.DespesasFarmacia)
                <th>@Html.DisplayNameFor(model => model.ValorPorDia)
                <th>@Html.DisplayNameFor(model => model.ValorPorPessoa)
                <th colspan="3"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomeSeg)
                    <td>@Html.DisplayFor(modelItem => item.Comissao) %
                    <td>R$ @Html.DisplayFor(modelItem => item.ExtBagagem)
                    <td>R$ @Html.DisplayFor(modelItem => item.MorteAcid)
                    <td>R$ @Html.DisplayFor(modelItem => item.TransCorpo)
                    <td>R$ @Html.DisplayFor(modelItem => item.InvalidezPerm)
                    <td>R$ @Html.DisplayFor(modelItem => item.DespesasFarmacia)
                    <td>@Html.DisplayFor(modelItem => item.ValorPorDia) %
                    <td>@Html.DisplayFor(modelitem => item.ValorPorPessoa) %

                    <td style="text-align:center"><a href="/Seguradora/Atualizar/@item.SegId" class="btn"><i class="fas fa-edit"></i></a>
                    <td><a href="/Seguradora/Visualizar/@item.SegId" title="" class="btn"><i class="fas fa-info-circle"></i></a>
                    <td><a href="/Seguradora/Remover/@item.SegId" title="" class="btn"><i style="color:red" class="fas fa-trash"></i></a>
                </tr>
            }

        </table>
        <br />

    </div>
</div>


