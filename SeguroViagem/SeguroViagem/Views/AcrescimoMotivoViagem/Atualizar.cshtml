@model SeguroViagem.Models.AcrescimoMotivoViagem

@{
    ViewBag.Title = "Atualizar";
}

<br />
<br />
<div class="card container" id="seguradoras" style="width:90rem">
    <div class="card-body">
        <h2>Atualizar</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>AcrescimoMotivoViagem</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MotivoId)

                <dl class="dl-horizontal col-md-6">
                    <dt>
                        <!-- Id da Seguradora -->
                        @Html.DisplayNameFor(model => model.SegId)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SegId)
                    </dd>

                    <!-- Motivo da Viagem (Lazer,Estudo ou Negócios) -->
                    <dt>
                        @Html.DisplayNameFor(model => model.MotivoViagem)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.MotivoViagem)
                    </dd>

                </dl>

                <!-- Valor do acréscimo cadastrado-->
                <div class="form-group">
                    <b>@Html.LabelFor(model => model.AcrescimoMotivo, htmlAttributes: new { @class = "control-label col-md-2" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AcrescimoMotivo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AcrescimoMotivo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Botão Salvar e Cancelar -->
                <div class="form-row">
                    <div class="col-sm-2.5">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                    <a href="/AcrescimoMotivoViagem/Listar/" title="" class="btn btn-outline-primary">
                        Cancelar
                    </a>
                </div>
            </div>
        }
    </div>
</div>

