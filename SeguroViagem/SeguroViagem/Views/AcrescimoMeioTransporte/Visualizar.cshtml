@model SeguroViagem.Models.AcrescimoMeioTransporte

@{
    ViewBag.Title = "Visualizar";
}


<br />
<br />

<div class="card container" style="width:30rem">
    <div class="card-body">

        <div>
            <h4 class="container">Visualizar Acréscimo Transporte</h4>
            <hr />
            <dl class="dl-horizontal">
                <!-- Id da Seguradora -->
                <dt>
                    @Html.DisplayNameFor(model => model.SegId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SegId)
                </dd>

                <!-- Nome da Seguradora -->
                <dt>
                    @Html.DisplayNameFor(model => model.Seguradora.NomeSeg)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Seguradora.NomeSeg)
                </dd>

                <!-- Nome do Transporte usado (aéreo,marítimo ou ambos) -->
                <dt>
                    @Html.DisplayNameFor(model => model.MeioTransporte)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.MeioTransporte)
                </dd>

                <!-- Valor do acréscimo -->
                <dt>
                    @Html.DisplayNameFor(model => model.AcrescimoTransporte)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AcrescimoTransporte)
                </dd>
            </dl>

        <!-- Botão Voltar -->
        </div>
        <div class="form-row">
            <a href="/AcrescimoMeioTransporte/Listar/" title="" class="btn btn-outline-primary">Voltar</a>
        </div>
    </div>
</div>


