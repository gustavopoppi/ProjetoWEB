@model SeguroViagem.Models.AcrescimoTipoViagem

@{
    ViewBag.Title = "Atualizar";
}

<br />
<br />
<div class="card container" style="width:30rem">
    <div class="card-body">
        <h2>Atualizar</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>AcrescimoTipoViagem</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.TipoId)

            <dl class="dl-horizontal col-md-6">
                <!-- Id da Seguradora -->
                <dt>
                    @Html.DisplayNameFor(model => model.SegId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SegId)
                </dd>

                <!-- Nome da Seguradora -->
                @*<dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>*@

                <!-- Tipo da Viagem (Nacional) -->
                <dt>
                    @Html.DisplayNameFor(model => model.TipoViagem)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TipoViagem)
                </dd>

            </dl>

                <!-- Valor do acréscimo cadastrado-->
                <div class="form-group">
                    <b>@Html.LabelFor(model => model.AcrescimoViagem, htmlAttributes: new { @class = "control-label col-md-6" })</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AcrescimoViagem, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AcrescimoViagem, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Botão Salvar e Cancelar -->
                <div class="form-row">
                    <div class="col-sm-2.5">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                    <a href="/AcrescimoTipoViagem/Listar/" title="" class="btn btn-outline-primary">
                        Cancelar
                    </a>
                </div>
            </div>
        }
    </div>
</div>

