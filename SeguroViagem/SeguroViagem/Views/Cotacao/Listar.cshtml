@model IEnumerable<SeguroViagem.Models.Cotacao>

@{
    ViewBag.Title = "Listar";
}

<br />
<br />
<div class="card container" id="seguradoras" style="width:90rem">
    <div class="card-body">
        <h2 style="text-align:center">Lista de Cotações Realizadas</h2>
        <br />
        <p style="text-align:right">
            <a href="/Cotacao/Inserir/" title="" class="btn btn-info col-md-1.5">
                <i class="fas fa-plus"></i> Cotação
            </a>
        </p>

        <table border="1" style="text-align:center" class="container">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ida)
                <th>@Html.DisplayNameFor(model => model.Volta)
                <th>@Html.DisplayNameFor(model => model.QtdeDias)
                <th>@Html.DisplayNameFor(model => model.QtdeViajantes)
                <th>@Html.DisplayNameFor(model => model.OrigemId)
                <th>@Html.DisplayNameFor(model => model.DestinoId)
                <th>@Html.DisplayNameFor(model => model.TipoViagem)
                <th>@Html.DisplayNameFor(model => model.MotivoViagem)
                <th>@Html.DisplayNameFor(model => model.MeioTransporte)
                <th colspan="3"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Ida)
                    <td>@Html.DisplayFor(modelItem => item.Volta)
                    <td>@Html.DisplayFor(modelItem => item.QtdeDias)
                    <td>@Html.DisplayFor(modelItem => item.QtdeViajantes)
                    <td>@Html.DisplayFor(modelItem => item.Origem.Estados)
                    <td>@Html.DisplayFor(modelItem => item.Destino.Estados)
                    <td>@Html.DisplayFor(modelItem => item.TipoViagem)
                    <td>@Html.DisplayFor(modelItem => item.MotivoViagem)
                    <td>
                        @Html.DisplayFor(modelItem => item.MeioTransporte)

                        <!-- Icones Editar, Visualizar e Remover(lixeira) -->
                    @*<td style="text-align:center"><a href="/Cotacao/Atualizar/@item.CotId" class="btn"><i class="fas fa-edit"></i></a>*@
                    <td><a href="/Cotacao/Visualizar/@item.CotId" title="" class="btn"><i class="fas fa-info-circle"></i></a>
                    <td><a href="/Cotacao/Remover/@item.CotId" title="" class="btn"><i style="color:red" class="fas fa-trash"></i></a>
                </tr>
            }

        </table>

    </div>
</div>
